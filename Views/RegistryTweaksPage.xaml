<Page x:Class="TweakHub.Views.RegistryTweaksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TweakHub.Views"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registry Tweaks"
      Background="{DynamicResource SystemControlBackgroundBaseLowBrush}">

    <Page.Resources>
        <Style x:Key="TweakItemStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlBorderBaseLowBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.05" ShadowDepth="1" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RiskLevelIndicator" TargetType="Border">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
    </Page.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Registry Tweaks" 
                       FontSize="32" FontWeight="Light"
                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Optimize Windows performance through registry modifications. Changes are automatically backed up."
                       FontSize="14"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Action Bar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,24">
            <Button x:Name="RefreshButton" Style="{StaticResource ModernButtonStyle}"
                    Click="RefreshButton_Click" Margin="0,0,12,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ”„" FontSize="14" Margin="0,0,8,0" Foreground="White"/>
                    <TextBlock Text="Refresh Status"/>
                </StackPanel>
            </Button>
            
            <Button x:Name="BackupButton" Style="{StaticResource ModernButtonStyle}"
                    Click="BackupButton_Click" Margin="0,0,12,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ’¾" FontSize="14" Margin="0,0,8,0" Foreground="White"/>
                    <TextBlock Text="Create Backup"/>
                </StackPanel>
            </Button>

            <Button x:Name="ApplyAllButton" Style="{StaticResource ModernButtonStyle}"
                    Click="ApplyAllButton_Click" Background="{StaticResource SuccessBrush}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="âš¡" FontSize="14" Margin="0,0,8,0" Foreground="White"/>
                    <TextBlock Text="Apply Recommended"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Tweaks List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="TweakCategoriesControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,0,32">
                            <!-- Category Header -->
                            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="{Binding Icon}" FontSize="24" Margin="0,0,12,0"
                                                   Foreground="{DynamicResource IconBrush}"/>
                                        <TextBlock Text="{Binding Name}" Style="{StaticResource CategoryHeaderStyle}"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Description}" Style="{StaticResource DescriptionTextStyle}"/>
                                </StackPanel>
                            </Border>

                            <!-- Tweaks in Category -->
                            <ItemsControl ItemsSource="{Binding Tweaks}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource TweakItemStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Tweak Info -->
                                                <StackPanel Grid.Column="0">
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                        <!-- Risk Level Indicator -->
                                                        <Border Style="{StaticResource RiskLevelIndicator}">
                                                            <Border.Background>
                                                                <SolidColorBrush>
                                                                    <SolidColorBrush.Color>
                                                                        <Binding Path="RiskLevel" Converter="{StaticResource RiskLevelToColorConverter}"/>
                                                                    </SolidColorBrush.Color>
                                                                </SolidColorBrush>
                                                            </Border.Background>
                                                        </Border>

                                                        <TextBlock Text="{Binding Name}" 
                                                                   FontSize="16" FontWeight="Medium"
                                                                   Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                                                        
                                                        <!-- Restart Required Indicator -->
                                                        <Border Background="{StaticResource WarningBrush}" 
                                                                CornerRadius="10" Padding="6,2" Margin="12,0,0,0"
                                                                Visibility="{Binding RequiresRestart, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                            <TextBlock Text="Restart Required" FontSize="10" 
                                                                       Foreground="White" FontWeight="Medium"/>
                                                        </Border>
                                                    </StackPanel>

                                                    <TextBlock Text="{Binding Description}" 
                                                               Style="{StaticResource DescriptionTextStyle}"
                                                               Margin="16,0,0,0"/>
                                                </StackPanel>

                                                <!-- Toggle Switch -->
                                                <CheckBox Grid.Column="1" 
                                                          Style="{StaticResource PillToggleStyle}"
                                                          IsChecked="{Binding IsEnabled}"
                                                          Click="TweakToggle_Click"
                                                          Tag="{Binding}"
                                                          VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
