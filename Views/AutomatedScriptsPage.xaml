                                Click="GamingOptimization_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â–¶ï¸" FontSize="14" Margin="0,0,8,0" Foreground="White"/>
                                <TextBlock Text="Execute"/>
                            </StackPanel>
