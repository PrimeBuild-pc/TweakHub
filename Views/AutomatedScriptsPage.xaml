                                           Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                            </StackPanel>

                            <TextBlock Text="Comprehensive gaming optimization including GPU settings, CPU priority, memory management, and network tweaks."
                                       Style="{StaticResource DescriptionTextStyle}"
                                       Margin="36,0,0,12"/>

                            <StackPanel Orientation="Horizontal" Margin="36,0,0,0">
                                <Border Background="{StaticResource AccentBrush}" CornerRadius="10" Padding="6,2" Margin="0,0,8,0">
                                    <TextBlock Text="GPU" FontSize="10" Foreground="White" FontWeight="Medium"/>
                                </Border>
                                <Border Background="{StaticResource AccentBrush}" CornerRadius="10" Padding="6,2" Margin="0,0,8,0">
                                    <TextBlock Text="CPU" FontSize="10" Foreground="White" FontWeight="Medium"/>
                                </Border>
                                <Border Background="{StaticResource AccentBrush}" CornerRadius="10" Padding="6,2" Margin="0,0,8,0">
                                    <TextBlock Text="Memory" FontSize="10" Foreground="White" FontWeight="Medium"/>
                                </Border>
                                <Border Background="{StaticResource AccentBrush}" CornerRadius="10" Padding="6,2">
                                    <TextBlock Text="Network" FontSize="10" Foreground="White" FontWeight="Medium"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>

