<Page x:Class="TweakHub.Views.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="About"
      Background="{DynamicResource SystemControlBackgroundBaseLowBrush}">

    <Page.Resources>
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
            <Setter Property="TextDecorations" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="ℹ️" FontSize="32" Margin="0,0,10,0" Foreground="{DynamicResource IconBrush}"/>
                <TextBlock Text="About" FontSize="32" FontWeight="Light" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            </StackPanel>
            <TextBlock Text="Information about ThreadPilot and Prime Build"
                       FontSize="14"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
        </StackPanel>

        <!-- Content -->
        <Border Grid.Row="1" Padding="24" CornerRadius="12"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}">
            <StackPanel>
                <TextBlock Text="ThreadPilot v1.0.2" FontSize="20" FontWeight="SemiBold" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                <TextBlock Text="© 2025 Prime Build" Margin="0,4,0,14" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>

                <TextBlock Text="License: MIT License" Margin="0,0,0,6" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                <TextBlock Margin="0,0,0,14" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}">
                    <Hyperlink NavigateUri="https://github.com/PrimeBuild-pc/ThreadPilot" RequestNavigate="Hyperlink_RequestNavigate">
                        https://github.com/PrimeBuild-pc/ThreadPilot
                    </Hyperlink>
                </TextBlock>

                <TextBlock Text="Maintainer: PrimeBuild" Margin="0,0,0,4" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                <TextBlock Text="Contact: primebuild.official@gmail.com" Margin="0,0,0,14" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>

                <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}">
                    This software is provided "as is", without warranty of any kind.
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Page>
